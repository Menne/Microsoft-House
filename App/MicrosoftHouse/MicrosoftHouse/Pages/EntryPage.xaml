<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
			 xmlns:local="clr-namespace:MicrosoftHouse;assembly=MicrosoftHouse"
			 x:Class="MicrosoftHouse.EntryPage">
	<ContentPage.Content>
		<Grid RowSpacing="0" BackgroundColor="White">
				<Grid.RowDefinitions>
					<RowDefinition Height="4*"/>
					<RowDefinition Height="*"/>
					<RowDefinition Height="0.8*"/>
					<RowDefinition Height="0.8*"/>
					<RowDefinition Height="*"/>
					<RowDefinition Height="*"/>
					<RowDefinition Height="*"/>
				</Grid.RowDefinitions>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="*"/>
				</Grid.ColumnDefinitions>
        <StackLayout HorizontalOptions="FillAndExpand"
                     Orientation="Vertical"
                     VerticalOptions="FillAndExpand"
					 BackgroundColor="#FF01A4EF"
					 Grid.Row="0"
					 Grid.Column="0">
				<Image Source="LoginIcon180.png"
						VerticalOptions="CenterAndExpand"
						HorizontalOptions="CenterAndExpand"/>
		</StackLayout>
        <StackLayout Grid.Row="2"
					Grid.Column="0"
					Padding="30,10,30,10"
					Orientation="Vertical">
			<StackLayout Orientation="Horizontal">
			<local:ExtendedEntry Placeholder="EMAIL"
									Keyboard="Email"
									HorizontalOptions="FillAndExpand"
									VerticalOptions="Center"
									Font="Small"
									TextColor="Black"
									FontFamily="Avenir"
									PlaceholderTextColor="Black">
				<Entry.Behaviors>
						<local:ValidEmail x:Name="validEmail" />
				</Entry.Behaviors>
			</local:ExtendedEntry>
						<Image Source="MailIcon.png"
								VerticalOptions="Center"
								HorizontalOptions="Start"/>
						</StackLayout>
						<BoxView Color="Black"
									Opacity="0.05"
									HeightRequest="1">
							<BoxView.IsVisible>
								<OnPlatform x:TypeArguments="x:Boolean">
                					<OnPlatform.iOS>true</OnPlatform.iOS>
               		 				<OnPlatform.Android>false</OnPlatform.Android>
           	 					</OnPlatform>
							</BoxView.IsVisible>
						</BoxView>
			</StackLayout>
			<StackLayout Grid.Row="3"
					Grid.Column="0"
					Padding="30,10,30,0"
					Orientation="Vertical">
			<StackLayout Orientation="Horizontal">
			<local:ExtendedEntry Placeholder="PASSWORD"
									Keyboard="Default"
									IsPassword="true"
									HorizontalOptions="FillAndExpand"
									VerticalOptions="Center"
									Font="Small"
									TextColor="Black"
									FontFamily="Avenir"
									PlaceholderTextColor="Black"/>
						<Image Source="PasswordIcon.png"
								VerticalOptions="Center"
								HorizontalOptions="Start"/>
						</StackLayout>
						<BoxView Color="Black"
									Opacity="0.05"
									HeightRequest="1">
							<BoxView.IsVisible>
								<OnPlatform x:TypeArguments="x:Boolean">
                					<OnPlatform.iOS>true</OnPlatform.iOS>
               		 				<OnPlatform.Android>false</OnPlatform.Android>
           	 					</OnPlatform>
							</BoxView.IsVisible>
						</BoxView>
			</StackLayout>
			<!--<Button Grid.Row="4"
					Grid.Column="0"
					Text="Forgot Password"
					TextColor="#FF1D1D26"
					FontSize="Small"
					FontFamily="Aevnir"
					Opacity="0.5"
					VerticalOptions="Start"
					HorizontalOptions="CenterAndExpand"/>-->
            <StackLayout Padding="30,10,30,10"
						Grid.Row="5"
						Grid.Column="0">
                <Button x:Name="loginButton"
						HorizontalOptions="FillAndExpand"
						VerticalOptions="Center"
						BackgroundColor="#FF01A4EF"
						Command="{Binding LoginCommand}"
						Text="SIGN IN"
						TextColor="White"
						FontFamily="Avenir"
						BorderRadius="0"/>
                <!--IsEnabled="{Binding Source={x:Reference validEmail},Path=IsValid}"-->
            </StackLayout>

        </Grid>
    </ContentPage.Content>
</ContentPage>
