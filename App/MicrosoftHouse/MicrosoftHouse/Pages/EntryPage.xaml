<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
			 xmlns:local="clr-namespace:MicrosoftHouse;assembly=MicrosoftHouse"
			 x:Class="MicrosoftHouse.EntryPage"
			 BackgroundColor="#FF01A4EF">
	<ContentPage.Content>
        <StackLayout HorizontalOptions="FillAndExpand"
                     Orientation="Vertical"
                     VerticalOptions="FillAndExpand">
                    <Image VerticalOptions="CenterAndExpand"
                           HorizontalOptions="CenterAndExpand">
                        <Image.Source>
                            <OnPlatform x:TypeArguments="ImageSource"
                                        iOS="LoginIcon180.png"
                                        Android="LoginIcon180.png"
                                        WinPhone="Images/LoginIcon180.png" />
                        </Image.Source>
                    </Image>
                    <Button x:Name="loginButton"
						HorizontalOptions="FillAndExpand"
						VerticalOptions="FillAndExpand"
						BackgroundColor="White"
						Command="{Binding LoginCommand}"
						Text="MICROSOFT ACCOUNT"
						TextColor="#FF01A4EF"
						FontFamily="Avenir"
						Image="MicrosoftIcon.png"
						BorderRadius="0"/>
    	</StackLayout>
    </ContentPage.Content>
</ContentPage>
